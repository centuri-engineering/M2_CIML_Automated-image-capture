#:kivy 1.0

<ScannerWidget>:
    size_hint_x: None
    orientation: 'horizontal'
    BoxLayout:
        size_hint_x: None
        width: 600
        orientation: 'vertical'
        KvCamera:
            id: camera
            resolution: (800, 608)
            size_hint_x: None
            width: 600
            play: False
        ToggleButton:
            id: preview
            text: 'Preview'
            on_press: root.preview()
            size_hint_y: None
            height: '48dp'
        Button:
            text: 'Capture'
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()
    BoxLayout:
        size_hint_x: None
        width: 200
        orientation: 'vertical'

        BoxLayout:
            size_hint_y: None
            height: 150
            orientation: 'vertical'
            Button:
                text: 'Scan'
                on_press: root.scan()
            Label:
                text: "Move the Camera"
                font_size: '20sp'
            Label:
                id: pos_lbl
                text: f'x: 0.0, y: 0.0'
            Label:
                id: step_lbl
                text: f"step: {10**step.value:.02f} cm"
            Slider:
                id: step
                min: -1
                max: 1
                step: 1
                on_value: step_lbl.text = f"step: {10**step.value:.02f} cm"
        BoxLayout:
            size_hint_y: None
            height: 150
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: root.move(0, 10**step.value)
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Left'
                    on_press: root.move(-10**step.value, 0)
                Button:
                    text: 'Right'
                    on_press: root.move(10**step.value, 0)
            Button:
                text: 'Down'
                on_press: root.move(0, -10**step.value)
            Button:
                text: 'Homing'
                on_press: root.homing()
